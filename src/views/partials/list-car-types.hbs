<h1 class="title">Currently Uplaoded Electric Vehicles</h1>
{{#each carTypes}}
  {{#if @first}}
    <div class="columns">
  {{/if}}
  <div class="column is-one-third">
    <div class="box box-link-hover-shadow">
      <img src="{{imageUrl}}">
      <h2 class="title">
        {{carName}}
      </h2>
      <h3 class="subtitle">
        {{carType}}
      </h3>
        <a href="/cartype/{{id}}" class="button">
          <span class="icon is-small">
            <i class="fa-sharp fa-solid fa-location-pen"></i>
          </span>
        </a>
        <a href="/cartype/deletecartype/{{id}}" class="button">
          <i class="fa-solid fa-trash-xmark"></i>
        </a>
    </div>
  </div>
  {{#if @last}}
    </div>
  {{else}}
    {{#modAdd1 @index 3}}
      </div>
      <div class="columns">
    {{/modAdd1}}
  {{/if}}
{{/each}}